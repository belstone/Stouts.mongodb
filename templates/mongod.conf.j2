net:
  port: {{ mongodb_conf_port|int }}
processManagement:
  fork: {{ mongodb_conf_fork|to_nice_json|quote }}
{% if mongodb_conf_replSet %}
replication:
  replSetName: {{ mongodb_conf_replSet|quote }}
  oplogSizeMB: {{ mongodb_conf_oplogSize }}
{% endif %}
storage:
  dbPath: {{ mongodb_conf_dbpath|quote }}
  engine: {{ mongodb_conf_engine|quote }}
systemLog:
  destination: file
  path: {{ mongodb_conf_logpath|quote }}
